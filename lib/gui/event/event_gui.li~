section HEADER

  + name    := EVENT_GUI;
  
  - category:=MICRO;
  
  - bibliography:="http://IsaacOS.com";
  - author      :="Sonntag Benoit (bsonntag@loria.fr)";
  - comment     :="Keyboard event.";
  
section INHERIT

  * parent_event:EVENT;
  
section PUBLIC
  
  + source:INBOX;
      
  - make src:INBOX at dst:INBOX <-
  (
    source      := src;
    destination := dst;
  );
  
  //
  // Display.
  // 
  
  - display <-
  ( + item:ITEM;
    "GUI event".print;
    item ?= source;
    (item != NULL).if {
      " item ".print;
      item.name.print;
    };
    '\n'.print;
  );
  
  
    



