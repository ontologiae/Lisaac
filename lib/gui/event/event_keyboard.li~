section HEADER

  + name    := EVENT_KEYBOARD;
  
  - category:=MICRO;
  
  - bibliography:="http://IsaacOS.com";
  - author      :="Sonntag Benoit (bsonntag@loria.fr)";
  - comment     :="Keyboard event.";
  
section INHERIT

  * parent_event:EVENT;
  
section PUBLIC
  
  - source:INBOX := KEYBOARD;
  
  + key:USHORTINT;
    
  + prev:EVENT_KEYBOARD;
  
  - set_prev new_prev:EVENT_KEYBOARD <-
  (
    prev := new_prev;
  );
  
  - make c:USHORTINT <-
  (
    key := c;
    destination := NULL;
  );
  
  //
  // Display.
  // 
  
  - display <-
  (
    "Keyb event: ".print;
    (key>>8).to_binary.print;
    " ".print;
    (key & 0FFh).to_character.print;
    '\n'.print;
  );
  
  - copy_from evt:EVENT_KEYBOARD <-
  (
    ? {evt != NULL};
    key := evt.key;
    destination := NULL;
  );
  
    



