section HEADER
  
  + name        := G_TXT;
  
  - comment     := "Label text.";
  
  - category    := MICRO;
  
  - bibliography:= "http://IsaacOS.com";
  
  - author      := "Benoit Sonntag (bsonntag@loria.fr)";
  
section INHERIT
  
  * parent_g_label:G_LABEL;
  
section PUBLIC
  
  - create st:ABSTRACT_STRING :SELF <-
  ( + result:SELF;
    
    result := clone;
    result.make st;
    result
  );
  
  - make st:ABSTRACT_STRING <-
  (
    name := st;
  );
    
section G_LABEL
  
  - my_width_min :INTEGER <- BITMAP.font_width name + 1;
  
  - my_height_min:INTEGER <- 17;
  
  - my_display_in bmp:BITMAP to x,y:INTEGER <- 
  (
    bmp.print name to (x+1),y;
  );

