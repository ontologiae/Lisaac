section HEADER
  
  + name        := PIXEL_24;
  
  - comment     := "";
  
  - category    := MICRO;
  
  - bibliography:= "http://IsaacOS.com";
  
  - author      := "Benoit Sonntag (bsonntag@loria.fr), Jerome Boutet (boutet@loria.fr)";
  
section INHERIT
  
  - parent_pixel:PIXEL := PIXEL;
  
section MAPPING
  
  + blue:USMALLINT;
  
  + green:USMALLINT;

  + red:USMALLINT;
  
section PUBLIC
  
  - color col:UINTEGER :UINTEGER <-
  (
    red   :=  (col >> 16).to_usmallint;
    green := ((col & 00FF00h) >> 8).to_usmallint;
    blue  :=  (col & 0000FFh).to_usmallint;
    col
  );
  
  - color_rgb r,g,b:USMALLINT <-
  (
    red := r;
    green := g;
    blue := b;
  );
  
  - size:USMALLINT       := 24; 
  - red_size:USMALLINT   := 8;
  - red_pos:USMALLINT    := 16;
  - green_size:USMALLINT := 8;
  - green_pos:USMALLINT  := 8;
  - blue_size:USMALLINT  := 8;
  - blue_pos:USMALLINT   := 0;
  - reserved_size:USMALLINT :=0;
  - reserved_pos:USMALLINT  :=0;
      
  - copy other:SELF <-  
  (
    blue  := other.blue;
    green := other.green;
    red   := other.red;
  );
  
  - to_pixel_24:PIXEL_24 <- self;
  













