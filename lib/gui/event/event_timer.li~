section HEADER
  
  + name    := EVENT_TIMER;
  
  - category:=MICRO;
  
  - bibliography:="http://IsaacOS.com";
  - author      :="Sonntag Benoit (bsonntag@loria.fr)";
  - comment     :="Timer event.";
  
section INHERIT

  * parent_event:EVENT;
  
section PUBLIC
  
  - source:INBOX := TIMER;
  
  + count:UINTEGER;
  
  + prev:EVENT_TIMER;
  
  - set_prev new_prev:EVENT_TIMER <-
  (
    prev := new_prev;
  );
  
  - make new_count:UINTEGER <-
  (
    count := new_count;
  );
  
  - delay:UINTEGER <- count - prev.count;
  
  //
  // Display.
  //
  
  - display <-
  (
     "Timer Event: ".print;
     count.print; 
     " delay: ".print;
     delay.print;
    '\n'.print;
  );




