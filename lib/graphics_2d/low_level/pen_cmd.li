Section PEN_CMD
  
  - get_tranform (sx,sy:REAL_32) with mtx:TRANSFORM :(REAL_32,REAL_32) <-
  ( + rx,ry:REAL_32;
    rx := sx*mtx.t0 + sy*mtx.t2 + mtx.t4;
    ry := sx*mtx.t1 + sy*mtx.t3 + mtx.t5;
    rx,ry
  );
  