  - view t:STRING <-
  (
    t.print; '\n'.print;
    "x=".print; x.print; '('.print; vx.print; ")\n".print;
    "y=".print; y.print; '('.print; vy.print; ")\n".print;
    "z=".print; z.print; '('.print; vz.print; ")\n".print;
  );

  
  