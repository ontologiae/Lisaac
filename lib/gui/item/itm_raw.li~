section HEADER
  
  + name        := ITM_RAW;
  
  - comment     := "Raw plateform.";
  
  - category    := MICRO;
  
  - bibliography:= "http://IsaacOS.com";
  
  - author      := "Benoit Sonntag (bsonntag@loria.fr)";
  
section INHERIT
  
  * parent_gui_item:GUI_ITEM;
    
section PUBLIC  
  
  //
  // Creation.
  //
  
  - create_in f:AREA at x,y:INTEGER action a:INBOX with lab:GUI_LABEL :SELF <-
  ( + result:SELF;
        
    result:=clone;
    result.make_in f at x,y size (lab.width_min),(lab.height_min) action a with lab;
    
    result
  );
  
  //
  // Auto-position.
  //
  
  - create a:INBOX with lab:GUI_LABEL :SELF <-
  ( + result:SELF;
        
    result:=clone;
    result.make (lab.width_min),(lab.height_min) action a with lab;
    
    result
  );
  
  //
  // Action.
  // 
  
  - receive msg:EVENT <-
  (
    receive_nothing msg;
    label.receive msg;
  );
  
  //
  // Display.
  //
  
  - draw x0,y0:INTEGER to x1,y1:INTEGER <-
  ( + px,py:INTEGER;    
    clipping x0,y0 to x1,y1;
    rectangle_fill x_min,y_min to x_max,y_max color color_back;
    color black;
    px := (width  - label.width_min ) >> 1;
    py := (height - label.height_min) >> 1;
    label.display_in self to px,py;
  );
  





