    last_char_index.to_hexadecimal.print;
    "\n       typo_ascender: ".print;
    typo_ascender.print;
    "\n       typo_descender: ".print;
    typo_descender.print;
    "\n       typo_line_gap: ".print;
    typo_line_gap.print;
    "\n       win_ascent: ".print;
    win_ascent.print;
    "\n       win_descent: ".print;
    win_descent.print;

    "\n       code_page_range1: ".print;
    code_page_range1.print;
    "\n       code_page_range2: ".print;
    code_page_range2.print;
    
    "\n       sx_height: ".print; 
    sx_height.print;
    "\n       s_cap_height: ".print; 
    s_cap_height.print;	
  
    "\n       us_default_char: ".print; 
    us_default_char.print;
    "\n       us_break_char: ".print; 
    us_break_char.print;
    "\n       us_max_context: ".print; 
    us_max_context.print;
    "\n       us_lower_point_pize: ".print; 
    us_lower_point_pize.print;
    "\n       us_upper_point_size: ".print; 
    us_upper_point_size.print;

    '\n'.print;
  );
