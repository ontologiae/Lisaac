section HEADER
  
  + name        := LAB_KEY;
  
  - comment     := "Label Key.";
  
  - category    := MICRO;
  
  - bibliography:= "http://IsaacOS.com";
  
  - author      := "Benoit Sonntag (bsonntag@loria.fr)";
  
section INHERIT
  
  * parent_g_label:GUI_LABEL;
  
section PUBLIC
  
  + key:USHORTINT;
  
  //
  // Creation.
  //
  
  - create k:USHORTINT :SELF <-
  ( + result:SELF;
    
    result := clone;
    result.make k;
    result
  );
  
  - make k:USHORTINT <-
  (    
    key := k;
    name := KEYBOARD.key_to_string k;
  );
    
section G_LABEL
  
  - my_width_min :INTEGER <- BITMAP.font_width name + 1;
  
  - my_height_min:INTEGER <- 17;
  
  - my_display_in bmp:GUI_ITEM to x,y:INTEGER <- 
  ( + px:INTEGER;
    bmp.color (bmp.blue);
    px := bmp.width - my_width_min;
    bmp.print name to px,y;
  );

